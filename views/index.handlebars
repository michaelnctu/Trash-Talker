<form method="POST" action="/">
  <div class="row">
    <div class="form-check form-check-inline col">
      <div class="d-flex flex-column">
        <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5668/angry-developer.jpg" alt=""
          class='img-fluid'>
        <div class="d-flex flex-row justify-content-center align-items-center">
          <input class="form-check-input" type="radio" name="target" id="engineer" value="engineer"
            {{#if_equal job 'engineer'}}checked{{/if_equal}}>
          <label class="form-check-label" for="engineer">工程師</label>
        </div>
      </div>
    </div>

    <div class="form-check form-check-inline col">
      <div class="d-flex flex-column">
        <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5667/angry-designer.jpg" alt=""
          class='img-fluid'>
        <div class="d-flex flex-row justify-content-center align-items-center">
          <input class="form-check-input" type="radio" name="target" id="designer" value="designer"
            {{#if_equal job 'designer'}}checked{{/if_equal}}>
          <label class="form-check-label" for="designer">設計師</label>
        </div>
      </div>
    </div>

    <div class="form-check form-check-inline col">
      <div class="d-flex flex-column">
        <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5669/angry-founder.jpg" alt=""
          class='img-fluid'>
        <div class="d-flex flex-row justify-content-center align-items-center">
          <input class="form-check-input" type="radio" name="target" id="entrepreneur" value="entrepreneur"
            {{#if_equal job 'entrepreneur'}}checked{{/if_equal}}>
          <label class="form-check-label" for="entrepreneur">創業家</label>
        </div>
      </div>
    </div>
  </div>

  <div class="d-flex flex-row">
    <button class="btn btn-success mr-5" type="submit">產生幹話</button>
    {{#if trashy}}
    <div class="alert alert-info" role="alert">
      <code>{{trashy}}</code>
    </div>
    {{/if}}
  </div>
</form>

</div>